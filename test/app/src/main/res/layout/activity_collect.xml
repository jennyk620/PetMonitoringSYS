<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 상단바 custom -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout2"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/linear_contents">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/next_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:contentInsetStart="0dp"
                app:popupTheme="@style/Theme.TitleBar.PopupOverlay"
                app:titleTextAppearance="@style/toolbar_font"
                app:titleTextColor="@color/white" />
        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:id="@+id/linear_contents"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            ayout_constraintVertical_bias="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button_finish"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout2"
            tools:layout_editor_absoluteX="10dp">

            <!--Camera View -->
            <com.example.hpilitev3.Camera_RecordingView
                android:id="@+id/preview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="5" />

            <!-- 수집 데이터 -->

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- 연결상태 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_state"
                        style="@style/notosan_medium_Style_collect"/>

                    <Space
                        android:layout_width="7dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/connection_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/disconnected"
                        style="@style/notosan_medium_Style_collect" />
                </LinearLayout>



                <!-- 가속도 데이터 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="6dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="가속도"
                        style="@style/notosan_medium_Style_collect" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="X : "
                            style="@style/notosan_demilight_Style" />
                        <Space
                            android:layout_width="5dp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id = "@+id/acc_x"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="no data"
                            style="@style/notosan_demilight_Style" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Y : "
                            style="@style/notosan_demilight_Style" />
                        <Space
                            android:layout_width="5dp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id = "@+id/acc_y"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="no data"
                            style="@style/notosan_demilight_Style" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Z : "
                            style="@style/notosan_demilight_Style" />
                        <Space
                            android:layout_width="5dp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id = "@+id/acc_z"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="no data"
                            style="@style/notosan_demilight_Style" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 자이로 데이터 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="6dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="자이로"
                        style="@style/notosan_medium_Style_collect" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="X : "
                            style="@style/notosan_demilight_Style" />
                        <Space
                            android:layout_width="5dp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id = "@+id/gyro_x"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="no data"
                            style="@style/notosan_demilight_Style" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Y : "
                            style="@style/notosan_demilight_Style" />
                        <Space
                            android:layout_width="5dp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id = "@+id/gyro_y"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="no data"
                            style="@style/notosan_demilight_Style" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Z : "
                            style="@style/notosan_demilight_Style" />
                        <Space
                            android:layout_width="5dp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id = "@+id/gyro_z"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="no data"
                            style="@style/notosan_demilight_Style" />
                    </LinearLayout>
                </LinearLayout>


                <!-- 지자계 데이터 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="6dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="지자계"
                        style="@style/notosan_medium_Style_collect" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="X : "
                            style="@style/notosan_demilight_Style" />
                        <Space
                            android:layout_width="5dp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id = "@+id/mag_x"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="no data"
                            style="@style/notosan_demilight_Style" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Y : "
                            style="@style/notosan_demilight_Style" />
                        <Space
                            android:layout_width="5dp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id = "@+id/mag_y"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="no data"
                            style="@style/notosan_demilight_Style" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Z : "
                            style="@style/notosan_demilight_Style" />
                        <Space
                            android:layout_width="5dp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id = "@+id/mag_z"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="no data"
                            style="@style/notosan_demilight_Style" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 지자계 데이터 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="6dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="회전각"
                        style="@style/notosan_medium_Style_collect" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="roll : "
                            style="@style/notosan_demilight_Style" />
                        <Space
                            android:layout_width="5dp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id = "@+id/roll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="no data"
                            style="@style/notosan_demilight_Style" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="pitch : "
                            style="@style/notosan_demilight_Style" />
                        <Space
                            android:layout_width="5dp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id = "@+id/pitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="no data"
                            style="@style/notosan_demilight_Style" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="yaw : "
                            style="@style/notosan_demilight_Style" />
                        <Space
                            android:layout_width="5dp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id = "@+id/yaw"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="no data"
                            style="@style/notosan_demilight_Style" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


        <!-- 데이터 수집 종료 Button -->

        <Button
            android:id="@+id/button_finish"
            style="@style/notosan_bold_Style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="0.5dp"
            android:text="데이터 수집 종료"
            app:layout_constraintTop_toBottomOf="@+id/linear_contents"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyle"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>